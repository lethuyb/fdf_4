<li id="product-<%= @product.id %>">
  <span class="image-show"><%= link_to image_tag(@product.images),
    products_path %>
  </span><br>
  <center>
    <span class="name">
      <%= @product.productName %>
    </span>
  </center><br>
  <span class="description">
    <%= @product.description %>
  </span><br>
  <span class="price">
    <%= @product.price %>
  </span><br>
  <span class="number"><%= t("product.quantily") %>
    <%= @product.quantily %>
  </span><br>
</li>
