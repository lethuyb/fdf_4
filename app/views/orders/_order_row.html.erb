<div class="well">
  <div class="row">
    <div class="col-xs-8">
      <h4><%= product.product_name %></h4>
      <div class="col-md-3">
        <% if product.images.present? %>
          <%= link_to image_tag(product.images), products_path %>
        <% else %>
          <%= link_to image_tag(Settings.products.url), product %>
        <% end %>
      </div>
    </div>
    <div class="col-xs-4">
      <%= form_for order_detail, remote: true do |f| %>
        <h4 class="text-right">
          <%= t "order.unit_price" %>
          <span class="price">
            <%= number_to_currency order_detail.price_each %>
          </span>
        </h4>
        <div class="row">
          <div class="col-xs-4">
            <%= f.number_field :quantity_ordered, value: order_detail.quantity_ordered.to_i,
              class: "form-control", min: 1 %>
            <%= f.hidden_field :product_id, value: product.id %>
          </div>
          <div class="col-xs-8 text-right">
            <div class="btn-group">
              <%= f.submit t("order.update_quantity"),
                class: "btn btn-primary" %>
              <%= link_to t("order.delete"), "#",
                data: {confirm: t("order.line_delete",
                  name: order_detail.product.product_name)},
                  method: :delete, remote: true, class: "btn btn-danger" %>
            </div>
          </div>
        </div>
        <h4 class="text-right">
          <%= t "order.total_price" %>
          <span class="price">
            <%= number_to_currency order_detail.total_price %>
          </span>
        </h4>
      <% end %>
    </div>
  </div>
</div>
